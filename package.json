{
  "name": "mixin-styles-gb",
  "version": "1.1.0",
  "description": "WordPress block theme",
  "main": "index.js",
  "scripts": {
    "sass-dev": "sass --watch --update --style=expanded sass/assets:assets",
    "sass-prod": "sass --no-source-map sass/assets/:assets",
    "minifyBlockCSS": "cleancss --batch --batch-suffix '.min' assets/block-css/**/*.css !assets/block-css/**/*.min.css",
    "minifyCSS": "cleancss --batch --batch-suffix '.min' assets/css/**/*.css !assets/css/**/*.min.css",
    "minifyEdOverrides": "cleancss -o assets/css/editor-overrides.min.css assets/css/editor-overrides.css",
    "remove-sourcemaps": "find ./assets -name '*.map' -delete",
    "serve": "browser-sync start --proxy 'localhost/wordpress' --files 'templates' 'sass'",
    "develop": "concurrently 'npm:sass-dev' 'npm:serve' --kill-others",
    "produce": "concurrently 'npm:sass-prod' 'npm:minifyBlockCSS' 'npm:minifyCSS' 'npm:minifyEdOverrides' 'npm:remove-sourcemaps'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jgpws/mixin-styles-gb.git"
  },
  "author": "Jason Gonzalez",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jgpws/mixin-styles-gb/issues"
  },
  "homepage": "https://github.com/jgpws/mixin-styles-gb#readme",
  "devDependencies": {
    "browser-sync": "^2.29.3",
    "concurrently": "^8.0.1",
    "renamer": "^4.0.0",
    "sass": "^1.62.1"
  },
  "dependencies": {
    "clean-css-cli": "^5.6.2"
  }
}
